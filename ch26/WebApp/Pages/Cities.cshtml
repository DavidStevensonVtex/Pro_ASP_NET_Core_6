@page
@model WebApp.Pages.CitiesModel

<div class="m-2">
    <table class="table table-sm table-striped table-bordered">
        <tbody>
            @foreach (City c in Model.Data?.Cities ?? Enumerable.Empty<City>())
            {
                <tr>
                    <td>@c.Name</td>
                    <td>@c.Country</td>
                    <td class="text-end">@($"{c.Population:N0}")</td>
                </tr>
            }
        </tbody>
    </table>

</div>