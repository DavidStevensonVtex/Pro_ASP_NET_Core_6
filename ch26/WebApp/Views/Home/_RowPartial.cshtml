@model Product

<tr>
    <td>@Model?.Price.ToString("C")</td>
    <td>@Model?.Name</td>
    <td>@Model?.CategoryId</td>
    <td>@Model?.SupplierId</td>
    <td>
        <a asp-action="index" asp-controller="home" asp-route-id="@Model?.ProductId"
            class="btn btn-sm btn-info text-white">
            Select
        </a>
    </td>
</tr>